<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarielShop.Pages.Settings"
             Title="Configuración"
             >

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Text="Base de Datos" TextColor="Blue" Grid.Row="0"/>
        <Entry x:Name="dataBase_et" Text="" Grid.Row="1"/>
        <Button x:Name="checkdb_bt" Clicked="checkdb_bt_Clicked" Text="Verificar Base Datos" Grid.Row="2"/>
        <Label x:Name="logs_lb" Grid.Row="3"/>
    </Grid>
</ContentPage>